{% include '@app/header.twig' %}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="" role="tabpanel" data-example-id="togglable-tabs">
            <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                {% helper menu.get_admin_level1_menu('admin_kisses_menu') %}
            </ul>
        </div>
        <div class="x_content">
            <form method="post" enctype="multipart/form-data" data-parsley-validate
                  class="form-horizontal form-label-left" name="save_form"
                  action="{{ data.action }}">
                <div class="form-group">
                    <label class="control-label col-md-3">{% helper lang.l('settings_admin_items_per_page', 'kisses') %}:</label>
                    <div class="col-md-9">
                        <input type="text" name="admin_items_per_page" value="{{ settings_data.admin_items_per_page }}" class="form-control" id="admin_items_per_page">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">{% helper lang.l('settings_users_items_per_page', 'kisses') %}:</label>
                    <div class="col-md-9">
                        <input type="text" name="users_items_per_page" value="{{ settings_data.items_per_page }}" class="form-control" id="users_items_per_page">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">{% helper lang.l('number_max_symbols', 'kisses') %}:</label>
                    <div class="col-md-9">
                        <input type="text" name="number_max_symbols" value="{{ settings_data.number_max_symbols }}" class="form-control" id="number_max_symbols">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">{% helper lang.l('number_max_symbols', 'kisses') %}:</label>
                    <div class="col-md-9">
                        <input type="checkbox" name="system_settings_page" value="1" {% if settings_data.system_settings_page %}checked{% endif %} class="flat" id="system_settings_page">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input class="btn btn-success" type="submit" name="btn_save" value="{% helper lang.l('btn_save', 'start', '', 'button') %}">
                        <a class="btn btn-default" href="{{ site_url }}admin/start/menu/add_ons_items">{% helper lang.l('btn_cancel', 'start') %}</a>
                    </div>
                </div>
            </form>
	</div>
    </div>
</div>

{% include '@app/footer.twig' %}
