{% helper lang.l('note_delete_kisses', 'kisses') %}

<script type="text/javascript">
var reload_link = "{{ site_url }}admin/kisses/";
    $(function(){
        $('#lie_delete').unbind('click').on('click', function(e){
            e.preventDefault();
            var data = new Array();
            $('.grouping:checked').each(function(i){
                data[i] = $(this).val();
            });
            if(data.length > 0){
                $.ajax({
                    url: site_url + 'admin/kisses/ajax_delete_select/',
                    data: {file_ids: data},
                    type: "POST",
                    cache: false,
                    success: function(data){
                        reload_this_page('index/');
                    }
                });
            }
        });
    });

    function reload_this_page(value){
        var link = reload_link + value;
        location.href = link;
    }
</script>
