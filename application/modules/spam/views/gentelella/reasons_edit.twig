{% include '@app/header.twig' %}

<div class="x_panel">
	<div class="x_title h4">
				{% if add_flag %}
					{% helper lang.l('admin_header_reasons_create', 'spam') %}
				{% else %}
					{% helper lang.l('admin_header_reasons_edit', 'spam') %}
				{% endif %}
	</div>
	<form class="x_content form-horizontal" method="post" action="{{ data.action }}" name="save_form">
			{% for lang_id, item in langs %}
			<div class="row form-group">
				<label class="control-label col-md-3 col-sm-3 col-xs-12">{{ item.name }}:&nbsp;* </label>
				<div class="col-md-6 col-sm-6 col-xs-12">
					<input type="text" value="{{ attribute(lang_data, lang_id)|e }}" name="lang_data[{{ lang_id }}]" class="form-control">
				</div>
			</div>
			{% endfor %}
			<div class="ln_solid"></div>
			{% helper save_text = lang.l('btn_save', 'start', '', 'button') %}
			<div class="row form-group"><div class="col-md-offset-3 col-sm-offset-3 col-md-9 col-sm-9 col-xs-12">
				<input class="btn btn-success" type="submit" name="btn_save" value="{{ save_text }}">
				<a class="btn btn-default" href="{{ site_url }}admin/spam/reasons/{{ current_lang_id }}">
					{% helper lang.l('btn_cancel', 'start') %}
				</a>
			</div></div>
	</form>
</div>

{% include '@app/footer.twig' %}
