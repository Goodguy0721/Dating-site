{% include '@app/header.twig' %}

<div class="x_panel">
	<div class="x_content">
		<ul class="nav nav-tabs bar_tabs">
			{% helper menu.get_admin_level1_menu('admin_spam_menu') %}
		</ul>
	</div>
	<div class="x_title h4">
		{% helper lang.l('admin_header_settings', 'spam') %}
	</div>
	<div class="x_content">
		<form method="post" action="{{ site_url }}admin/spam/settings" name="save_form"
				  data-parsley-validate	class="form-horizontal form-label-left">
			<div class="form-group">
				<label class="control-label col-sm-3 col-xs-12">
					{% helper lang.l('field_send_mail', 'spam') %}:</label>
				<div class="col-xs-9 col-xs-12">
					<input type="text" name="send_alert_to_email" class="form-control" value="{{ data.send_alert_to_email|e }}">
				</div>
			</div>
			<div class="ln_solid"></div>
			<div class="form-group">
				<div class="col-sm-9 col-xs-12 col-sm-offset-3">
					{% helper save_text = lang.l('btn_save', 'start', '', 'button') %}
					<input class="btn btn-success" type="submit" name="btn_save" value="{{ save_text }}">
					<a class="btn btn-default" href="{{ site_url }}admin/users">
            {% helper lang.l('btn_cancel', 'start') %}</a>
				</div>
			</div>
		</form>
	</div>
</div>

{% include '@app/footer.twig' %}
