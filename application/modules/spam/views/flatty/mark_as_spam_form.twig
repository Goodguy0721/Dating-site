<div class="content-block load_content">
	<h1>
        {% helper lang.l('header_spam_form', 'spam') %}
    </h1>
	<div class="inside edit_block">
		<form id="spam_form" action="" method="POST">
			{% if data.form_type == 'select_text' %}
                <div class="form-group">
                    <label>
                        {% helper lang.l('field_spam_reason', 'spam') %}&nbsp;*
                    </label>
                    <select name="data[id_reason]" class="form-control">
                        {% for key, item in reasons.option %}
                            <option value="{{ key|e }}">
                                {{ item }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label>
                        {% helper lang.l('field_spam_message', 'spam') %}&nbsp;
                        ({% helper lang.l('field_spam_optional', 'spam') %})
                    </label>
                    <textarea name="data[message]" rows="5" cols="23"
                              class="form-control"></textarea>
                </div>
            {% endif %}

			<button id="close_btn" class="btn btn-primary">
                {% helper lang.l('btn_send', 'start', '', 'button') %}
            </button>

			<input type="hidden" name="type_gid" value="{{ data.gid }}" />
			<input type="hidden" name="object_id" value="{{ object_id }}" />

            {% if is_spam_owner %}
                <input type="hidden" name="is_owner" value="1">
            {% endif %}
		</form>
	</div>
</div>
