{% set please_ask_me = 'Please ask me' %}
{% set no_preference = 'No preference' %}

{# Main section #}
<div class="view-section profile-section">
  <div class="form-group">
    <label>Profile headline: </label>
    <span id="headline-field-label">{% if data.headline %}{{ data.headline_str }}{% else %}{{ please_ask_me }}{% endif %}</span>
  </div>

  <div class="form-group">
    <label>About me: </label>
    <span id="about-me-field-label">{% if data.about_me %}{{ data.about_me_str }}{% else %}{{ please_ask_me }}{% endif %}</span>
  </div>

  <div class="form-group">
    <label>About my match / friends: </label>
    <span id="looking-about-field-label">{% if data.looking_about %}{{ data.looking_about_str }}{% else %}{{ no_preference }}{% endif %}</span>
  </div>
</div>

{# Basic section #}
