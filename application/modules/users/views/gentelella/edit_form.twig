                <li{% if item.gid == section %} class="active"{% endif %}>
                    <a href="{{ site_url }}admin/users/edit/{{ item.gid }}/{{ data.id }}">
                        {{ item.name }}
                    </a>
                </li>
                {% endfor %}
            {% endif %}
            {% set is_module_installed = utils.depends('seo_advanced', 'media') %}
            {% if is_module_installed.seo_advanced %}
