{% include '@app/header.twig' %}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="" role="tabpanel" data-example-id="togglable-tabs">
            <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                {% helper menu.get_admin_level1_menu('admin_shoutbox_menu') %}
            </ul>
        </div>
        <div class="x_content">
            <form method="post" enctype="multipart/form-data" data-parsley-validate
                  class="form-horizontal form-label-left" name="save_form"
                  action="{{ data.action }}">
		{% for key, item in settings_data.vars %}
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">
                      {{ item.field_name }}:</label>
                    <div class="col-sm-9 col-xs-12">
                        {% if item.field_type == 'text' or not item.field_type %}
                            <input type="text" name="settings[{{ item.field }}]" value="{{ item.value|escape }}" class="form-control">
                        {% elseif item.field_type == 'checkbox' %}
                            <input type="checkbox" name="settings[{{ item.field }}]" value="1" {% if item.value %}checked{% endif %} class="flat">
                        {% endif %}
                    </div>
                </div>
		{% endfor %}
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-sm-9 col-xs-12 col-sm-offset-3">
                        <button value="1" type="submit" name="btn_save" class="btn btn-success">
                            {% helper lang.l('btn_save', 'start', '', 'button') %}</button>
                        <a class="btn btn-default" href="{{ site_url }}admin/start/menu/add_ons_items">
                            {% helper lang.l('btn_cancel', 'start' )%}</a>
                    </div>
                </div>
            </form>
        </div>
	</div>
</div>

{% include '@app/footer.twig' %}
