{% include '@app/header.twig' %}
<form class="x_panel form-horizontal" method="post" action="{{ data.action }}" name="save_form">
	<div class="x_title h4">{% helper lang.l('admin_header_robots_txt_editing', 'seo_advanced') %}</div>
	<div class="x_content">
		<div class="row form-group">
			<label class="control-label col-md-3 col-sm-3 col-xs-12">{% helper lang.l('field_robots_file', 'seo_advanced') %}: </label>
			<div class="col-md-9 col-sm-9 col-xs-12"><textarea class="form-control" name="content" style="height: 170px">{{ content }}</textarea></div>
		</div>
		<div class="ln_solid"></div>
		<div class="row form-group">
			<div class="col-md-offset-3 col-sm-offset-3 col-md-9 col-sm-9 col-xs-12">
				<input class="btn btn-success" type="submit" name="btn_save_robots" value="{% helper lang.l('btn_save', 'start', '', 'button') %}">
				<a class="btn btn-default" href="{{ site_url }}admin/seo_advanced">{% helper lang.l('btn_cancel', 'start') %}</a>
			</div>
		</div>
	</div>
</form>

{% include '@app/footer.twig' %}
