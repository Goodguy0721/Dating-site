{% include '@app/header.twig' %}<div class="col-md-12 col-sm-12 col-xs-12">    <div class="x_panel">        <div class="x_content">            <form method="post" enctype="multipart/form-data" data-parsley-validate                  class="form-horizontal form-label-left" name="save_form"                  action="{{ data.action }}">                <div class="form-group">                    <label class="control-label col-sm-3 col-xs-12">                      {% helper lang.l('field_gid', 'store') %}*:</label>                    <div class="col-sm-9 col-xs-12">                        <input type="text" name="gid" value="{{ category.gid|escape }}" class="form-control">                    </div>                </div>                <div class="form-group">                    <label class="control-label col-sm-3 col-xs-12">                      {% helper lang.l('field_category_name', 'store') %}:</label>                    <div class="col-sm-9 col-xs-12">                    </div>                </div>                <div class="form-group">                    <label class="control-label col-sm-3 col-xs-12">                      {{ langs[current_lang_id].name }}:</label>                    <div class="col-sm-9 col-xs-12">                        <input type="text" name="name_{{ current_lang_id }}"                               value="{{ category['name_' ~ current_lang_id]|escape }}"                               lang-editor="value" lang-editor-type="data-name" lang-editor-lid="{{ current_lang_id }}"                               class="form-control">                    </div>                </div>                <div class="form-group">                    <div class="accordion col-md-9 col-sm-9 col-xs-12 col-md-offset-3 col-sm-offset-3" id="accordion" role="tablist" aria-multiselectable="true">                        <div class="panel">                            <a class="panel-heading" role="tab" id="headingOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">                                <h4 class="panel-title">{% helper lang.l('others_languages', 'start') %}</h4>                            </a>                            <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">                                <div class="panel-body">                                {% for lang_id, lang_item in langs %}                                    {% if lang_id != current_lang_id %}                                        <div class="form-group">                                            <label class="control-label col-md-2 col-sm-2 col-xs-12">{{ lang_item.name }}:</label>                                            <div class="col-md-10 col-sm-10 col-xs-12">                                                <input type="text" name="name_{{ lang_id }}"                                                       value="{{ category['name_' ~ lang_id]|escape }}"                                                       lang-editor="value" lang-editor-type="data-name" lang-editor-lid="{{ lang_id }}"                                                       class="form-control">                                            </div>                                        </div>                                    {% endif %}                                {% endfor %}                                </div>                            </div>                        </div>                    </div>                </div>                <div class="form-group">                    <label class="control-label col-sm-3 col-xs-12">                      {% helper lang.l('field_category_description', 'store') %}:</label>                    <div class="col-sm-9 col-xs-12">                    </div>                </div>                <div class="form-group">                    <label class="control-label col-sm-3 col-xs-12">                      {{ langs[current_lang_id].name }}:</label>                    <div class="col-sm-9 col-xs-12">                        <textarea name="description_{{ lang_id }}" class="form-control">{{ category['description_' ~ current_lang_id]|escape }}</textarea>                    </div>                </div>                <div class="form-group">                    <div class="accordion col-md-9 col-sm-9 col-xs-12 col-md-offset-3 col-sm-offset-3" id="accordionTwo" role="tablist" aria-multiselectable="true">                        <div class="panel">                            <a class="panel-heading" role="tab" id="headingTwo" data-toggle="collapse" data-parent="#accordionTwo" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">                                <h4 class="panel-title">{% helper lang.l('others_languages', 'start') %}</h4>                            </a>                            <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">                                <div class="panel-body">                                {% for lang_id, lang_item in langs %}                                    {% if lang_id != current_lang_id %}                                        <div class="form-group">                                            <label class="control-label col-md-2 col-sm-2 col-xs-12">{{ lang_item.name }}:</label>                                            <div class="col-md-10 col-sm-10 col-xs-12">                                                <textarea name="description_{{ lang_id }}" class="form-control">{{ category['description_' ~ lang_id]|escape }}</textarea>                                            </div>                                        </div>                                    {% endif %}                                {% endfor %}                                </div>                            </div>                        </div>                    </div>                </div>                <div class="ln_solid"></div>                <div class="form-group">                    <div class="col-sm-9 col-xs-12 col-sm-offset-3">                        <input type="submit" name="btn_save" value="{% helper lang.l('btn_save', 'start', '', 'button') %}" class="btn btn-success">                        <a class="btn btn-default" href="{{ back_url }}">{% helper lang.l('btn_cancel', 'start') %}</a>                    </div>                </div>            </form>	</div>    </div></div>{% include '@app/footer.twig' %}
