{% include '@app/header.twig' %}<div class="col-md-12 col-sm-12 col-xs-12">    <div class="x_panel">    {% if product.id %}        <div class="" role="tabpanel" data-example-id="togglable-tabs">            <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">                <li{% if section == 'description' %} class="active"{% endif %}>                    <a href="{{ site_url }}admin/store/product/description/{{ product.id }}/">                        {% helper lang.l('table_header_description_product', 'store') %}                    </a>                </li>                <li{% if section == 'media' %} class="active"{% endif %}>                    <a href="{{ site_url }}admin/store/product/media/{{ product.id }}">                        {% helper lang.l('table_header_media_product', 'store') %}                    </a>                </li>            </ul>        </div>    {% endif %}        <div class="x_content">        {% if section == 'description' %}            <form method="post" enctype="multipart/form-data" data-parsley-validate                  class="form-horizontal form-label-left" name="save_form"                  action="{{ data.action }}">                <div class="form-group">                    <label class="control-label col-md-3 col-sm-3 col-xs-12">                        {% helper lang.l('field_gid', 'store') %}:</label>                    <div class="col-sm-9">                        <input type="text" name="gid" value="{{ product.gid|escape }}" class="form-control">                    </div>                </div>                <div class="form-group">                    <label class="control-label col-md-3 col-sm-3 col-xs-12">                        {% helper lang.l('field_categories', 'store') %}:</label>                    <div class="col-sm-9">                        {% helper store.store_categories_select({ 'id_product' : product.id}) %}                    </div>                </div>                <div class="form-group">                    <label class="control-label col-md-3 col-sm-3 col-xs-12">                        {% helper lang.l('field_product_name', 'store') %}:</label>                    <div class="col-sm-9">                    </div>                </div>                <div class="form-group">                    <label class="control-label col-md-3 col-sm-3 col-xs-12">                        {{ langs[current_lang_id].name }}:</label>                    <div class="col-sm-9">                        <input type="text" name="name_{{ current_lang_id }}"                               value="{{ product['name_' ~ current_lang_id]|escape }}"                               lang-editor="value" lang-editor-type="data-name" lang-editor-lid="{{ current_lang_id }}"                               class="form-control">                    </div>                </div>                <div class="form-group">                    <div class="accordion col-md-9 col-sm-9 col-xs-12 col-md-offset-3 col-sm-offset-3" id="accordion" role="tablist" aria-multiselectable="true">                        <div class="panel">                            <a class="panel-heading" role="tab" id="headingOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">                                <h4 class="panel-title">{% helper lang.l('others_languages', 'start') %}</h4>                            </a>                            <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">                                <div class="panel-body">                                {% for lang_id, lang_item in langs %}                                    {% if lang_id != current_lang_id %}                                        <div class="form-group">                                            <label class="control-label col-md-2 col-sm-2 col-xs-12">{{ lang_item.name }}:</label>                                            <div class="col-md-10 col-sm-10 col-xs-12">                                                <input type="text" name="name_{{ lang_id }}"                                                       value="{{ product['name_' ~ lang_id]|escape }}"                                                       lang-editor="value" lang-editor-type="data-name" lang-editor-lid="{{ lang_id }}"                                                       class="form-control">                                            </div>                                        </div>                                    {% endif %}                                {% endfor %}                                </div>                            </div>                        </div>                    </div>                </div>                <div class="form-group">                    <label class="control-label col-md-3 col-sm-3 col-xs-12">                        {% helper lang.l('field_product_price', 'store') %} ({% helper start.currency_format_output() %}):</label>                    <div class="col-sm-9">                        <input type="text" name="price" value="{{ product.price|escape }}" class="form-control">                    </div>                </div>                <div class="form-group">                    <label class="control-label col-md-3 col-sm-3 col-xs-12">                        {% helper lang.l('field_product_price_reduced', 'store') %} ({% helper start.currency_format_output() %}):</label>                    <div class="col-sm-9">                        <input type="text" name="price_reduced" value="{{ product.price_reduced|escape }}" class="form-control">                    </div>                </div>                <div class="form-group">                    <label class="control-label col-md-3 col-sm-3 col-xs-12">                        {% helper lang.l('field_product_add_to_bestsellers', 'store') %}:</label>                    <div class="col-sm-9">                        <input type="checkbox" value="1" name="is_bestseller" {% if product.is_bestseller %}checked{% endif %} class="flat">                    </div>                </div>                <div id="block_options">            {% if product.options %}                {% for opt in product.options %}                    <div class="form-group">                        {% helper store.store_options_values({ 'header' : opt.name, 'type' : opt.type, 'id' : opt.id, 'options' : product['option_' ~ opt.id], 'action' : 'edit'}) %}                    </div>                {% endfor %}            {% endif %}                </div>                <div class="form-group">                    <label class="control-label col-md-3 col-sm-3 col-xs-12">                        {% helper lang.l('field_product_description', 'store') %}:</label>                    <div class="col-sm-9">                    </div>                </div>                <div class="form-group">                    <label class="control-label col-md-3 col-sm-3 col-xs-12">                        {{ langs[current_lang_id].name }}:</label>                    <div class="col-sm-9">                        <textarea name="description_{{ lang_id }}" class="form-control">{{ product['description_' ~ current_lang_id]|escape }}</textarea>                    </div>                </div>                <div class="form-group">                    <div class="accordion col-md-9 col-sm-9 col-xs-12 col-md-offset-3 col-sm-offset-3" id="accordionTwo" role="tablist" aria-multiselectable="true">                        <div class="panel">                            <a class="panel-heading" role="tab" id="headingTwo" data-toggle="collapse" data-parent="#accordionTwo" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">                                <h4 class="panel-title">{% helper lang.l('others_languages', 'start') %}</h4>                            </a>                            <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">                                <div class="panel-body">                                {% for lang_id, lang_item in langs %}                                    {% if lang_id != current_lang_id %}                                        <div class="form-group">                                            <label class="control-label col-md-2 col-sm-2 col-xs-12">{{ lang_item.name }}:</label>                                            <div class="col-md-10 col-sm-10 col-xs-12">                                                <textarea name="description_{{ lang_id }}" class="form-control">{{ product['description_' ~ lang_id]|escape }}</textarea>                                            </div>                                        </div>                                    {% endif %}                                {% endfor %}                                </div>                            </div>                        </div>                    </div>                </div>                <div class="ln_solid"></div>                <div class="form-group">                    <div class="col-sm-9 col-xs-12 col-sm-offset-3">                        <input type="submit" name="btn_save" value="{% helper lang.l('btn_save', 'start', '', 'button') %}" class="btn btn-success">                        <a class="btn btn-default" href="{{ back_url }}">{% helper lang.l('btn_cancel', 'start') %}</a>                    </div>                </div>            </form>            <script type='text/javascript'>                $(function(){                    loadScripts(                        ["{% helper utils.jscript('store', 'admin-store.js', 'path') %}"],                        function(){                            admin_store = new AdminStore;                        },                        ['admin_store'],                        {async: true}                    );                });            </script>        {% elseif section == 'media' %}            {% helper store.store_add_photos_form({}) %}            <div class="clearfix"></div>            {% helper store.store_add_video_form({}) %}            <div class="clearfix"></div>            <script type='text/javascript'>                $(function(){                    loadScripts(                        [                            "{% helper utils.jscript('', 'uploader.js', 'path') %}",                            "{% helper utils.jscript('store', 'store_media.js', 'path') %}"                        ],                        function(){                            var video_mimes = {{ video_config.allowed_mimes|json_encode }};                            var photo_mimes = {{ photo_config.allowed_mimes|json_encode }};                            var product_id = {{ product.id }};                            store_video = new store_media({                                siteUrl: site_url,                                idProduct: product_id,                                photoSize: 'middle',                                lang_delete_confirm: "{% helper lang.l('delete_confirm', 'media') %}",                                galleryContentDiv: 'store_video',                                galleryContentUrl: 'admin/store/ajax_get_product_video',                            });                            vu = new uploader({                                Accept: 'application/json',                                siteUrl: site_url,                                uploadUrl: 'admin/store/ajax_save_product_media/video/' + product_id,                                fileId: 'videofile',                                formId: 'upload_video',                                sendType: 'file',                                sendId: 'btn_vupload',                                messageId: 'v-attach-input-error',                                warningId: 'v-attach-input-warning',                                maxFileSize: '{{ video_config.max_size }}',                                mimeType:  video_mimes,                                allowEmptyFile: true,                                cbOnUpload: function(name, data){                                    store_video.reload();                                },                                cbOnComplete: function(data){                                    if(data.errors.length){                                        error_object.show_error_block(data.errors, 'error');                                    }                                    $('#videofile').val('');                                },                                jqueryFormPluginUrl: "{% helper utils.jscript('', 'jquery.form.min.js', 'path') %}"                            });                            store_photo = new store_media({                                siteUrl: site_url,                                idProduct: product_id,                                photoSize: 'middle',                                galleryContentDiv: 'store_photo',                                lang_delete_confirm: "{% helper lang.l('delete_confirm', 'media') %}"                            });                            mu = new uploader({                                Accept: 'application/json',                                siteUrl: site_url,                                uploadUrl: 'admin/store/ajax_save_product_media/images/'+product_id,                                zoneId: 'dndfiles',                                fileId: 'multiUpload',                                formId: 'item_form',                                sendType: 'file',                                sendId: 'btn_mupload',                                messageId: 'attach-input-error',                                warningId: 'attach-input-warning',                                maxFileSize: '{{ photo_config.max_size }}',                                mimeType:  photo_mimes,                                cbOnQueueComplete: function(data){                                    store_photo.reload();                                },                                createThumb: true,                                thumbWidth: 60,                                thumbHeight: 60,                                thumbCrop: true,                                thumbJpeg: false,                                thumbBg: 'transparent',                                fileListInZone: true,                                filebarHeight: 200,                                jqueryFormPluginUrl: "{% helper utils.jscript('', 'jquery.form.min.js', 'path') %}"                            });                        },                        ['vu','store_video','mu','store_photo'],                        {async: false}                    );                });            </script>        {% endif %}        </div>    </div></div>{% include '@app/footer.twig' %}