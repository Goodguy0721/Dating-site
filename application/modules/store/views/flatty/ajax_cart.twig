<div class="cart-list">	<div class="box-sizing">		<div class="cart-scroller box-sizing">			{% for cart_item in data_cart.items %}                <div class="pb20 pr10">                    <div class="oh">                        <span>                            {{ cart_item.product.name }}&nbsp;({{ cart_item.count }}&nbsp;                            {% helper lang.l('field_pc', 'store') %})                        </span>                        <span class="ml10 fltr">                            {% helper start.currency_format_output({                                'value': cart_item.price                            }) %}                        </span>                    </div>                    <div>                        {% for opt in cart_item.product.options %}                            {% set option_id = opt.id %}                            {% if cart_item.data[option_id] %}                                <div class="product-options fs13">                                    {% helper store.store_options_values({                                        'header': opt.name,                                        'id': opt.id,                                        'options': cart_item.data[option_id],                                        'action': 'view',                                        'source': 'user'                                    }) %}                                </div>                            {% endif %}                        {% endfor %}                    </div>                </div>			{% endfor %}		</div>	</div>	<div>        {% helper store.store_button_block({            'product': product,            'method': 'checkout',            'class': 'btn btn-primary go_shopping_cart wp100'        }) %}    </div></div>{% helper utils.jscript('', 'jquery-slimscroll.js', '') %}
