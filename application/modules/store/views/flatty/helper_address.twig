<div class="address-block">    <div class="search-header">        <div class="title col-xs-12 col-sm-10 col-md-10 col-lg-10 no-padding-left">            {% helper lang.l('header_address', 'store') %}        </div>    </div>    {% if recipient is not empty %}        <div class="address-recipient col-xs-12 no-padding-left">            {% for item_address in recipient %}                <div class="last_address col-xs-12 col-sm-4 col-md-4 col-lg-4 no-padding-left no-padding-left" id="last_address_{{ item_address.id }}" data-addressid="{{ item_address.id }}">                    <div class="select-for block mb10">                        <div class="address-action">                            <div class="col-xs-10 no-padding-left">                                <i class="fa fa-check-circle check"></i>                            </div>                            <div class="col-xs-2 no-padding-right">                                <i class="fa fa-remove check address_remove fright"></i>                            </div>                        </div>                        <div class="address">                            <div class="address_info">                                <div class="strong-username">{{ item_address.user_name }}</div>                                <div class="address-item">{{ item_address.country }}</div>                                <div class="address-item">{{ item_address.region }}</div>                                <div class="address-item">{{ item_address.city }}</div>                                <div class="address-item">{{ item_address.address }}</div>                                <div class="address-item">{{ item_address.zip }}</div>                            </div>                            <div class="address_edit" data-addressid="{{ item_address.id }}">                                <i class="fa fa-pencil"></i>&nbsp;{% helper lang.l('link_address_edit', 'store') %}                            </div>                        </div>                    </div>                </div>            {% endfor %}        </div>        <div class="a address_edit col-xs-12 no-padding-left" data-addressid="0">            <button type="button" class="btn btn-primary"><i class="fa fa-map-marker"></i>&nbsp;{% helper lang.l('link_address_add', 'store') %}</button>        </div>    {% else %}        <div class="a address_edit col-xs-12 no-padding-left" data-addressid="0">            <button type="button" class="btn btn-primary"><i class="fa fa-map-marker"></i>&nbsp;{% helper lang.l('link_address_add', 'store') %}</button>        </div>    {% endif %}</div>
