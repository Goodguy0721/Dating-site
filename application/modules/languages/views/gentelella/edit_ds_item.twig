{% include '@app/header.twig' %}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class='x_title'>
            <h2><!--Form title-->
                {% if current_index %}
                    {% helper lang.l('admin_header_ds_item_change', 'languages') %}
                {% else %}
                    {% helper lang.l('admin_header_ds_item_add', 'languages') %}
                {% endif %}
            </h2>
            <div class='clearfix'></div>
        </div>
        <div class='x_content'>
            <form method="post" action="{{data.action}}" name="save_form" enctype="multipart/form-data" class="form-horizontal form-label-left">
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">
                        {% helper lang.l('field_gid', 'languages') %}:
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        {% if option_gid %}
                            <label class="data-label">{{option_gid}}</label>
                        {% else %}
                            <input type="text" value="" name="option_gid" class="form-control">
                        {% endif %}
                    </div>
                </div>
                {% for lang_id, item in langs %}
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            {{item.name}}:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" value="{{lang_data[lang_id]|escape}}" name="lang_data[{{lang_id}}]" class="form-control">
                        </div>
                    </div>
                {% endfor %}
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-9 col-sm-9 col-xs-12 col-sm-offset-3">
                        <input type="submit" name="btn_save" value="{% helper lang.l ('btn_save','start','','button') %}" class="btn btn-success">
                        <a class="btn btn-default cancel" href="{{site_url}}admin/languages/ds_items/{{current_lang_id}}/{{current_module_id}}/{{current_gid}}">
                            {% helper lang.l ('btn_cancel', 'start') %}
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(function () {
        $("div.row:odd").addClass("zebra");
    });
</script>

{% include '@app/footer.twig' %}
