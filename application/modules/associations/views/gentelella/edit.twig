{% include '@app/header.twig' %}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_content">
            <form method="post" enctype="multipart/form-data" data-parsley-validate
                  class="form-horizontal form-label-left" name="save_form"
                  action="{{ data.action }}">
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">
                        {% helper lang.l('field_name', 'associations') %}:</label>
                    <div class="col-sm-9">
                        <input type="text" name="name_{{ current_lang_id }}"
                               value="{{ attribute(association, 'name_' ~ current_lang_id)|e }}"
                               lang-editor="value" lang-editor-type="data-name" lang-editor-lid="{{ current_lang_id }}"
                               class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <div class="accordion col-md-9 col-sm-9 col-xs-12 col-sm-offset-3" id="accordion" role="tablist" aria-multiselectable="true">
                        <div class="panel">
                            <a class="panel-heading" role="tab" id="headingOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                <h4 class="panel-title">{% helper lang.l('others_languages', 'start') %}</h4>
                            </a>
                            <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                                <div class="panel-body">
                                {% for lang_id, lang_item in langs %}
                                    {% if lang_id != current_lang_id %}
                                        <div class="form-group">
                                            <label class="control-label col-md-2 col-sm-2 col-xs-12">{{ lang_item.name }}:</label>
                                            <div class="col-md-10 col-sm-10 col-xs-12">
                                                <input type="text" name="name_{{ lang_id }}"
                                                       value="{{ attribute(association, 'name_' ~ lang_id)|e }}"
                                                       lang-editor="value" lang-editor-type="data-name" lang-editor-lid="{{ lang_id }}"
                                                       class="form-control">
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-9 col-sm-offset-3">
                        <i>{% helper lang.l('field_clarification', 'associations') %}</i>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">
                        {% helper lang.l('field_view_association', 'associations') %}:</label>
                    <div class="col-sm-9">
                        <input type="text" name="name_{{ current_lang_id }}"
                               value="{{ attribute(association, 'name_' ~ current_lang_id)|e }}"
                               lang-editor="value" lang-editor-type="data-name" lang-editor-lid="{{ current_lang_id }}"
                               class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <div class="accordion col-md-9 col-sm-9 col-xs-12 col-md-offset-3 col-sm-offset-3" id="accordionTwo" role="tablist" aria-multiselectable="true">
                        <div class="panel">
                            <a class="panel-heading" role="tab" id="headingTwo" data-toggle="collapse" data-parent="#accordionTwo" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                <h4 class="panel-title">{% helper lang.l('others_languages', 'start') %}</h4>
                            </a>
                            <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                                <div class="panel-body">
                                {% for lang_id, lang_item in langs %}
                                    {% if lang_id != current_lang_id %}
                                        <div class="form-group">
                                            <label class="control-label col-md-2 col-sm-2 col-xs-12">{{ lang_item.name }}:</label>
                                            <div class="col-md-10 col-sm-10 col-xs-12">
                                                <input type="text" name="view_name_{{ lang_id }}"
                                                       value="{{ attribute(association, 'view_name_' ~ lang_id)|e }}"
                                                       lang-editor="value" lang-editor-type="data-view_name" lang-editor-lid="{{ lang_id }}"
                                                       class="form-control">
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-9 col-sm-offset-3">
                        <i>{% helper lang.l('field_clarification', 'associations') %}</i>
                    </div>
                </div>

                <div class="form-group">
                    {% if  not association.image.thumbs.big %}
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            {% helper lang.l('field_upload', 'associations') %}:
                        </label>
                        <div class="col-sm-9">
                            <input type="file" accept="image" name="associations" required="required" class="form-control">
                        </div>
                    {% else %}
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            {% helper lang.l('field_uploaded', 'associations') %}:
                        </label>
                        <div class="col-sm-9">
                            <image src="{{ association.image.thumbs.big }}" title="{{ association.name }}"  alt="{{ association.name }}">
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <button type="submit" name="save" class="btn btn-success">
                            {% helper lang.l('btn_save', 'start') %}</button>
                        <a href="{{site_url}}admin/associations" class="btn btn-default">
                            {% helper lang.l('btn_cancel', 'start') %}</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="clearfix"></div>

{% include '@app/footer.twig' %}
