<button id="btn-association-{{ associations_button_rand }}" class="btn btn-primary form-control {% if associations.compared %}disabled {% endif %}">
    {% helper lang.l('link_send', 'associations') %}
</button><br />
<script>
    $(function () {
        loadScripts(
            "{% helper utils.jscript('associations', '../views/flatty/js/associations.js', 'path') %}",
                function () {
                    var lang_data = {
                        compare: "{% helper lang.l('button_compare', 'associations', '', 'js') %}",
                        more: "{% helper lang.l('button_more', 'associations', '', 'js') %}",
                        already_sent: "{% helper lang.l('error_already_sent', 'associations', '', 'js') %}",
                        associations_empty: "{% helper lang.l('error_associations_empty', 'associations', '', 'js') %}"
                    };
                    associations = new Associations({
                        siteUrl: site_url,
                        profile_id: '{{ associations.profile_id }}',
                        rand: '{{ associations_button_rand }}',
                        compared: '{{ associations.compared }}',
                        lang: lang_data,
                        template: '{% helper utils.template('associations', 'association.twig') %}'
                    });
                },
                'associations',
                {async: false}
            );
        });
    </script>
