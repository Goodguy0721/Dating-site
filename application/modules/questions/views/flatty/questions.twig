{% include '@app/header.twig' %}<div class="col-xs-12">		<h1 data-title="{% helper lang.l('questions', 'questions') %}" data-id="questions-title" id="questions-title">		{% helper lang.l('questions', 'questions') %}	</h1></div><!--Profile -->					<div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">	    <div class="hide-in-mobile">        {% helper users.get_preview() %}        {% helper banners.show_banner_place('banner-185x75') %}        {% helper media.user_media_block({'count': 9, 'user_id': user_id}) %}           {% helper banners.show_banner_place('banner-185x155') %}    </div></div><!--Profile --><div class="col-xs-12 col-sm-9 col-md-6 col-lg-6 b-questions">	{% if questions|length > 0 %}			<div class="b-questions__header clearfix">			<div class="row">				<div class="col-xs-8 col-sm-6 col-md-8">				</div>				<div class="col-xs-4 col-sm-6 col-md-4">					<div class="sorter short-line" id="sorter_block">						<div class="fright">			                {% set page_data = page_data|merge({'type': 'cute'}) %}			                {% helper start.pagination(page_data) %}			            </div>					</div>				</div>			</div>		</div>	{% endif %}    	<div id="questions_content" {% if questions|length == 0 %}class="panel pg-panel-border"{% endif %}>		<div class="b-questions__list">			{% for question in questions %}				<div class="media media-questions_parent" id="question_{{ question.id }}">					<div class="media-left">						<a class="g-pic-border g-rounded" href="{% helper seo.seolink('users', 'view', question.id_user) %}" target="_blank">							<img class="media-object" alt="{{ question.user_info }}" title="{{ question.user_info }}" src="{{ question.user_logo.small }}" />						</a>					</div>					<div class="media-body">						<h4 class="media-heading">							<a href="{% helper seo.seolink('users', 'view', question.id_user) %}" target="_blank">								{{ question.user_info }}							</a>							<span class="fs13 gray">{{ question.date_created }}</span>						</h4>						<a class="b-questions__remove" href="javascript: void(0);" onclick="javascript: if(confirm('{% helper lang.l('confirm_delete', 'questions') %}')) location.href='{{ site_url }}questions/delete_question/{{ question.id }}/{{ page }}';"><i class='fa fa-times'></i></a>						<p>{{ question.name }}</p>						{% if question.answer %}							<div class="media media-questions_child" id="answer_get_{{ question.id }}">								<div class="media-left">									<a class="g-pic-border g-rounded-small" href="{% helper seo.seolink('users', 'view', question.id_user_to) %}" target="_blank">										<img class="media-object" height="30" alt="{{ question.user_info_to }}" title="{{ question.user_info_to }}" src="{{ question.user_logo_to.small }}" />									</a>								</div>								<div class="media-body">									<h4 class="media-heading">										<a href="{% helper seo.seolink('users', 'view', question.id_user_to) %}" target="_blank">											{{ question.user_info_to }}										</a>									</h4>									<div id="answer_{{ question.id }}">										{{ question.answer }}									</div>								</div>							</div>						{% else %}							<div class="media media-questions_child" id="answer_get_{{ question.id }}" style="display: none;">								<div class="media-left">									<a class="g-pic-border g-rounded-small" href="{% helper seo.seolink('users', 'view', question.id_user_to) %}" target="_blank">										<img class="media-object" height="30" alt="{{ question.user_info_to }}" title="{{ question.user_info_to }}" src="{{ question.user_logo_to.small }}" />									</a>								</div>								<div class="media-body">									<h4 class="media-heading">										<a href="{% helper seo.seolink('users', 'view', question.id_user_to) %}" target="_blank">											{{ question.user_info_to }}										</a>									</h4>									<div id="answer_{{ question.id }}"></div>								</div>							</div>							{% if question.id_user_to == logged_user_id %}								<div class="media media-questions_child" id="answer_form_{{ question.id }}">									<div class="media-left">										<a class="g-pic-border g-rounded-small" href="{% helper seo.seolink('users', 'view', question.id_user_to) %}" target="_blank">											<img class="media-object" height="30" alt="{{ question.user_info_to }}" title="{{ question.user_info_to }}" src="{{ question.user_logo_to.small }}" />										</a>									</div>									<div class="media-body">										<textarea data-id="{{ question.id }}" class="js-question-field form-control" maxlength="100" rows="2" 			                                    id="input_answer_{{ question.id }}" 			                                    placeholder="{% helper lang.l('your_answer', 'questions') %}"></textarea>										<div id="answer_symbols_left_{{ question.id }}" class="b-questions__symbols-left"></div>			                            <button onclick="sendAnswer({{ question.id }})" name="btn_save" 			                                id="send_btn_{{ question.id }}" class="btn btn-primary questions-send-btn_ hide">			                                {% helper lang.l('send', 'questions') %}			                            </button>			                            <script type="text/javascript">											$('#input_answer_{{ question.id }}').unbind('focus').bind('focus', function(){												$('#send_btn_{{ question.id }}').show();											});																						$(document.body).on('click', function(event){												if( $(event.target).closest("#send_btn_{{ question.id }}, #input_answer_{{ question.id }}").length == 0 ) {													$('#send_btn_{{ question.id }}').hide();												}											});			                        	</script>									</div>								</div>							{% else %}								<div class="media media-questions_child">									<div class="media-left">										<a class="g-pic-border g-rounded-small" href="{% helper seo.seolink('users', 'view', question.id_user_to) %}" target="_blank" class="fltl mr5">											<img class="media-object" height="30" alt="{{ question.user_info_to }}" title="{{ question.user_info_to }}" src="{{ question.user_logo_to.small }}" />										</a>									</div>									<div class="media-body">										<h4 class="media-heading">											<a href="{% helper seo.seolink('users', 'view', question.id_user_to) %}" target="_blank">												{{ question.user_info_to }}											</a>										</h4>										<div class="b-questions__noanswer" id="answer_{{ question.id }}"><i class="fa fa-clock-o"></i>&nbsp;{% helper lang.l('no_answer', 'questions') %}</div>									</div>								</div>							{% endif %}						{% endif %}					</div>                    <div id="action_{{ question.id }}" class="b-questions__letspeak {% if question.answer is empty %}hide{% endif %} fright mt10">										{% if action_descr %}                            <span class="mr10">{{ action_descr }}</span>                        {% endif %}                        {% if question.id_user_to == logged_user_id %}						                            {% helper {action_module}.{helper_func}({                                    'id_user': question.id_user,                                    'user_id': question.id_user,                                    'id_contact': question.id_user                            }) %}                        {% else %}							                            {% helper {action_module}.{helper_func}({                                    'id_user': question.id_user_to,                                    'user_id': question.id_user_to,                                    'id_contact': question.id_user_to                            }) %}                        {% endif %}                    </div>								</div>			{% else %}							<div class="empty text-center p10">                        <p>{% helper lang.l('no_questions', 'questions') %}</p>                        <p>                            <a href="{% helper seo.seolink('users', 'search') %}" class="btn btn-primary">{% helper lang.l('btn_search', 'questions') %}</a>                        </p>	            </div>			{% endfor %}		</div>		{% if questions|length > 0 %}	        <div>	            {% set page_data = page_data|merge({'type': 'full'}) %}	            {% helper start.pagination(page_data) %}	        </div>	    {% else %}	    	{#<div class="p10"></div>#}	    {% endif %}		</div>    {% helper banners.show_banner_place('banner-980x90') %}</div><script type="text/javascript">	function sendAnswer(question_id){				$.ajax({			url: '{{ site_url }}questions/ajax_save_answer',			type: 'POST',			data: {"question_id": question_id, "answer": $('#input_answer_'+question_id).val()},			dataType: 'json',			cache: false,						success: function(data){					var errorObj = new Errors;				if(typeof(data.error) != 'undefined' && data.error != ''){											errorObj.show_error_block(data.error, 'error');				}else{										$('#answer_form_' + question_id).hide();					$('#answer_' + question_id).append( data.answer );					$('#answer_get_' + question_id).show();					$('#action_' + question_id).show();					/*$('#' + _self.properties.btnForm).find('i').addClass('g');*/										errorObj.show_error_block(data.success, 'success');				}			}		});			}        $(function() {        $('.js-question-field').unbind('keyup').bind('keyup', function(e) {            var el = $(this);                    var question_id = el.data('id');                    if (e.keyCode == 13) {                if (e.ctrlKey ) {                    el.val(el.val() + "\n");                } else {                    sendAnswer(question_id);                }            }                         var maxLength = el.attr('maxlength');            var curLength = el.val().length;            el.val(el.val().substr(0, maxLength));                            var remaning = maxLength - curLength;                           if (remaning < 0) remaning = 0;                            var symbols_left = $('#answer_symbols_left_' + question_id);            symbols_left.html(remaning);                            if (remaning < 10) {                symbols_left.addClass('warning');            } else {                symbols_left.removeClass('warning');            }        }).each(function() {            var el = $(this);                    var question_id = el.data('id');                        var maxLength = el.attr('maxlength');            var curLength = el.val().length;            el.val(el.val().substr(0, maxLength));                            var symbols_left = $('#answer_symbols_left_' + question_id);            symbols_left.html(maxLength - curLength);        });	});</script><div class="col-xs-12 col-sm-9 col-md-3 col-lg-3 pull-right">    <div id="active_users" class="clearfix mb10">        {% helper users.active_users_block({'count': '16'}) %}    </div>    {% helper banners.show_banner_place('banner-320x75') %}    <div id="recent_photo" class="clearfix mb10">        {% helper media.recent_media_block({'upload_gid': 'photo', 'count': '16'}) %}    </div>     {% helper banners.show_banner_place('banner-320x250') %}    </div><div class="clr"></div>{% include '@app/footer.twig' %}
