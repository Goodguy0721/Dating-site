<!-- Intercom -->
<script>
  window.intercomSettings = {
    user_id: "{{ app.user_id }}",
    app_id: "{{ app_id }}",
    name: "{{ app.name }}", // Full name
    email: "{{ app.email }}", // Email address
    custom_domain: "{{ app.custom_domain }}",
    language_override: "{{ app.language_override }}",
    trackEvent: "{{ app.trackEvent }}",
    user_hash: "{{ app.user_hash }}"
  };
</script>
<script>
    (function () {
        var w = window;
        if (w == window.top) {
            var ic = w.Intercom;
            if (typeof ic === "function") {
                ic('reattach_activator');
                ic('update', intercomSettings);
            } else {
                var d = document;
                var i = function () {
                    i.c(arguments)
                };
                i.q = [];
                i.c = function (args) {
                    i.q.push(args)
                };
                w.Intercom = i;
                function l() {
                    var s = d.createElement('script');
                    s.type = 'text/javascript';
                    s.async = true;
                    s.src = 'https://widget.intercom.io/widget/{{ app_id }}';
                    var x = d.getElementsByTagName('script')[0];
                    x.parentNode.insertBefore(s, x);
                }
                if (w.attachEvent) {
                    w.attachEvent('onload', l);
                } else {
                    w.addEventListener('load', l, false);
                }
            }
        }
    })()
</script>
<!-- END Intercom -->