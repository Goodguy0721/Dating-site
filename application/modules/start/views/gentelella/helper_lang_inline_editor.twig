<form id="save_form" data-parsley-validate class="form-horizontal form-label-left" name="lang_edit">
{% for key, item in langs %}
    <div class="form-group">
        {% if is_textarea %}
        <label class="control-label col-md-1 col-sm-1 col-xs-12">{{ item.name }}:</label>
        <div class="col-md-11 col-sm-11 col-xs-12">
            <textarea name="field{{ key }}" lang-editor="redactor" lang-id="{{ key }}" class="form-control"></textarea>
        </div>
        {% else %}
        <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ item.name }}:</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <input type="text" name="field{{ key }}" value="" lang-editor="redactor" lang-id="{{ key }}" class="form-control" />
        </div>
        {% endif %}
    </div>
{% endfor %}
</form>
