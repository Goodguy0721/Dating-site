{% include '@app/header.twig' %}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_content">
            <form method="post" enctype="multipart/form-data" data-parsley-validate
                  class="form-horizontal form-label-left" name="save_form"
                  action="{{ data.action }}" id="nearest_users_form">
                <div class="form-group">
                    <label class="control-label col-sm-3 col-xs-12">
                      {% helper lang.l('field_search_pattern', 'nearest_users') %}:</label>
                    <label class="data-label col-sm-9 col-xs-12">
                      {% helper lang.l('field_search_pattern_circle', 'nearest_users') %}</label>
                </div>
		<div class="form-group">
                    <label class="control-label col-sm-3 col-xs-12">{% helper lang.l('field_search_radius', 'nearest_users') %}: </label>
                    <div class="col-sm-9 col-xs-12">
                      <div class="row">
                        <div class="col-sm-7">
                            <input type="text" value="{{ data.search_radius }}" name="search_radius" class="form-control">
                        </div>
                        <div class="col-sm-2 row">
                            <select name="search_radius_unit" class="form-control">
                                {% for key, item in distance_units.option %}
                                    <option value="{{ key }}"{% if key == data.search_radius_unit%} selected{% endif %}>{{ item }}</option>
                                {% endfor %}
                            </select>
                        </div>
                      </div>
                    </div>
		</div>
		<div class="form-group">
                    <label class="control-label col-sm-3 col-xs-12">
                      {% helper lang.l('field_set_position_manual', 'nearest_users') %}: </label>
                    <div class="col-sm-9 col-xs-12">
                      <input type="checkbox" value="1" {% if data.set_position_manual %}checked{% endif %}
                        name="set_position_manual" class="flat">
                    </div>
		</div>
    <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-sm-9 col-xs-12 col-sm-offset-3">
                        <input type="submit" name="btn_save" value="{% helper lang.l('btn_save', 'start', '', 'button') %}" class="btn btn-success">
                        <a class="btn btn-default" href="{{ site_url }}admin/start/menu/add_ons_items">{% helper lang.l('btn_cancel', 'start') %}</a>
                    </div>
                </div>
            </form>
	</div>
    </div>
</div>
<div class="clearfix"></div>

{% include '@app/footer.twig' %}
