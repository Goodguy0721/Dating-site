{% if blogs or posts %}
<h2 class="line top bottom linked">
	{% helper lang.l('tags_search_result', 'blogs') %} - {{ tag }}
</h2>
{% for item in blogs %}
	<div class="fleft" style="width:45%; padding:5px 30px 5px 0px"><a href="{{ site_url }}blogs/view_blog/{{ item.id }}">{{ item.title }}</a><span class="fright">{% helper lang.l('post_author', 'blogs') %}: {{ item.user.output_name }}</span></div>
{% endfor %}
{% for item in posts %}
	<div class="fleft" style="width:45%; padding:5px 30px 5px 0px"><a href="{{ site_url }}blogs/view_post/{{ item.id }}">{{ item.title }}</a><span class="fright">{% helper lang.l('post_author', 'blogs') %}: {{ item.user.output_name }}</span></div>
{% endfor %}
{% endif %}