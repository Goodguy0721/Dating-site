<h4>Installing: {{ module.install_name }}</h4>
<div class="x_content">
  {{ module.install_descr }}
</div>
<div class="bar-level2" id="module_bar">
  <div class="progress">
      <div class="progress-bar progress-bar-success" data-transitiongoal="0" id="overall_bar"
          style="width: {{ current_module_percent }}%" aria-valuenow="0">{{ current_module_percent }}%</div>
  </div>
</div>
<div class="x_content">
<div class="x_content h4">Module settings</div>
{% if settings %}
<form name="settings_submit_form" id="settings-submit-form" method="post">
  {{ settings }}
  <div class="clearfix"></div>
  <div class="ln_solid">
  <div class="form-group">
    <div class="col-xs-12">
      <input type="button" class="btn btn-success" onclick="javascript: product_install.submit_settings();"
             name="send_btn" value="Save">
    </div>
  </div>
  <div class="clearfix"></div>
  <input type="hidden" name="submit_btn" value='1'>
</form>
</div>
{% else %}
<script>
$(function(){
    product_install.delayed_request('{{ next_step }}');
});
</script>
{% endif %}

