{% include '@app/header.twig' %}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">

			<script>
				var update;
				$(function() {
					update=new librariesUpdate({
						siteUrl: '{{ site_root }}',
						library_gid: '{{ library.gid }}',
						library_version: '{{ library.update.version }}',
						library_update_url: '{{ library.update.file }}',
						library_archive_file: '{{ library.update.file_name }}'
					});
				});
			</script>

			<form method="post" action="{{ data.action }}" data-parsley-validate class="form-horizontal form-label-left">
				<div class="x_title">
					<h3>Library update</h3>
				</div>

						<div class="form-group">
							<label class="control-label col-sm-3 col-xs-12"><b>Available library:</b></label>
							<div class="col-sm-9 col-xs-12">{{ library.gid }} V{{ library.version }}.00 ({{ library.name }})</div>
						</div>
						<div class="form-group">
							<label class="control-label col-sm-3 col-xs-12"><b>Update:</b></label>
							<div class="col-sm-9 col-xs-12">
								V{{ library.update.version }}.00 (<a href="{{ library.update.file }}"
									target="_blank">{{ library.update.file }}</a>)</div>
						</div>

						<div class="form-group hided" id="get_block">
							<label class="control-label col-sm-3 col-xs-12">Download library archive:</label>
							<div class="col-sm-9 col-xs-12 action-block">-</div>
						</div>
						<div class="form-group hided" id="unpack_block">
							<label class="control-label col-sm-3 col-xs-12">Unpack archive:</label>
							<div class="col-sm-9 col-xs-12 action-block">-</div>
						</div>
						<div class="form-group hided" id="copy_block">
							<label class="control-label col-sm-3 col-xs-12">Copy files:</label>
							<div class="col-sm-9 col-xs-12 action-block">-</div>
						</div>
				<div class="ln_solid"></div>
				<div class="form-group">
					<div class="col-sm-9 col-xs-12 col-sm-offset-3">
						<a href="{{ site_url }}admin/install/libraries" class="btn btn-default">Back</a>
					</div>
				</div>
			</form>
			<div class="clearfix">
		</div>
</div>

{% include '@app/footer.twig' %}
