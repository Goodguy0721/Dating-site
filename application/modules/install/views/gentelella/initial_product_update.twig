{% include '@app/header.twig' %}

{% helper utils.jscript_by_theme('install', 'product_install.js', 'script', 'gentelella') %}
<script>
    var product_install;
				$(function() {
					product_install = new productInstall({
						siteUrl: '{{ site_root }}',
						installType: 'product_update', update_file: '{{ file }}',
						update_path: '{{ path }}'
					});
	});
</script>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
    
			<div class="form-group">
				<div class="install_main_window">
					<div class="pad">
						<h4>Update status</h4>
                        <div class="progress">
                            <div class="progress-bar progress-bar-success" 
                                id="overall_bar" style="width: {{ current_overall_percent }}%;" 
                                aria-valuenow="{{ current_overall_percent }}">{{ current_overall_percent }}%</div>
                        </div>
						<br>
						<div id="modules_reload">
							{{ start_html }}
						</div>
					</div>
				</div>
			</div>
			<div class="clearfix"></div>
            
    </div>
</div>

<script type="text/javascript" src="{{ site_url }}application/views/gentelella/js/progressbar/bootstrap-progressbar.min.js"></script>

{% include '@app/footer.twig' %}
