{% if errors %}
	<h4>Config rewriting</h4>
	<div>
	{% for item in errors %}
	<font class="req">{{ item }}</font><br>
	{% endfor %}
	</div>
	<div class="ln_solid">
	<div class="form-group">
		<div class="col-xs-12">
			<input type="button" onclick="javascript: product_install.request('overall_product');"
						 name="refresh_install" value="Refresh" class="btn btn-primary">
		</div>
	</div>
	<div class="clearfix"></div>
{% else %}
	<h4>The site is successfully installed! </h4>
	<div>
	{% for item in messages %}
		<b>{{ item }}</b><br><br>
	{% endfor %}
	</div>
	<div class="ln_solid"></div>
	<div class="form-group">
		<div class="col-xs-12">
			<a href="{{ site_url }}" name="finish_install" class="btn btn-primary">Finish</a>
		</div>
	</div>
	<div class="clearfix"></div>

	<script type="text/javascript">
		$(function(){
			window.open('http://www.pilotgroup.net/connect.php?product={{ product_name }}');
		});
	</script>
{% endif %}
<script>
	$(function() {
		product_install.update_overall_progress({{ current_overall_percent }});
	});
</script>
