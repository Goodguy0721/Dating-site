<h4>Installing: {{ module.update_name }}</h4>
<div>{{ module.update_description }}</div>
<br>
<div class="bar-level2" id="module_bar">
  <div class="progress">
      <div class="progress-bar progress-bar-success" data-transitiongoal="0" id="overall_bar"
          style="width: {{ current_module_percent }}%" aria-valuenow="0">{{ current_module_percent }}%</div>
  </div>
</div>
<div class="x_content h4">CHMOD</div>
{% if errors %}
<div>
<textarea readonly cols="70" rows="10">
{% for item in errors %}
{{ item.msg }}:
{{ item.file }}
______________________________________
{% endfor %}
</textarea>
</div>
<div class="ln_solid"></div>
<div class="form-group">
  <div class="col-xs-12">
    <input type="button" onclick="javascript: product_install.request('chmod');"
           name="refresh_module" value="Refresh" class="btn btn-primary">
  </div>
</div>
<div class="clearfix"></div>
{% else %}
<script>
$(function(){
    product_install.delayed_request('{{ next_step }}');
});
</script>
{% endif %}


