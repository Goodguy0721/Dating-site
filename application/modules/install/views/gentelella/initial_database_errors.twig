{% include '@app/header.twig' %}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
			<div class="x_title">
				<h4>Errors:</h4>
			</div>
			<div class="x_content">
				<form method="post" action="{{ data.action|e }}" data-parsley-validate class="form-horizontal form-label-left">
					<div class="form-group">
						<textarea readonly cols="90" rows="40">{% foreach item in errors %}{{ item }} ______________________________________{% endfor %}</textarea>
					</div>
					<div class="form-group">
						<div class="col-xs-12">
							<a href="{{ site_url }}admin/install/sql" class="btn btn-primary">Refresh</a>
						</div>
					</div>
				</form>
				<div class="clearfix"></div>
			</div>
		</div>
</div>

{% include '@app/footer.twig' %}
