<form action="" method="post" class="form-horizontal">
    <div class="form-group">
        <label for="" class="col-xs-12 tali">
            {% helper lang.l('reg_subscriptions', 'subscriptions') %}: 
        </label>
        <div class="col-sm-6">
            {% for key, item in subscriptions_list %}
                <input {% if item.subscribed %}checked{% endif %} type="checkbox" name="user_subscriptions_list[]" value="{{ item.id }}" id="sub{{ item.id }}">
                {% helper lang.l(item.name_i, 'subscriptions') %}
            {% endfor %}
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            <input type="submit" class="btn btn-primary" name="btn_subscriptions_save" value="{% helper lang.l('btn_save', 'start', '', 'button') %}">
        </div>
    </div>
</form>
