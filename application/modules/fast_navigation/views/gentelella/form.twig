<div class="edit-form mtb10">
    <input data-action="fast_search" type="text" name="keyword" class="form-control" placeholder="{% helper lang.l('value_fast_navigation_botton', 'fast_navigation') %}" required>
</div>
{% helper utils.jscript('fast_navigation', 'fastNavigationAdmin.js') %}
<script type='text/javascript'>
    $(function () {
        new fastNavigationAdmin({
            siteUrl: site_url,
            id: {fastBlock: 'fastBlock'},
            langs: {
                header: '{% helper lang.l('admin_header_search', 'fast_navigation') %}',
                placeholder: '{% helper lang.l('value_fast_navigation_botton', 'fast_navigation') %}',
                close: '{% helper lang.l('btn_close', 'start') %}',
            }
        });
    });
</script>