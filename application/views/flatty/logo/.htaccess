<IfModule mod_mime.c>
	RemoveHandler .php .phtml .php3
	RemoveType .php .phtml .php3
</IfModule>

<IfModule mod_php5.c>
	#php_flag engine off
</IfModule>

<Files *.php>
  <IfModule !mod_access_compat.c>
   Require all denied
  </IfModule>
  <IfModule mod_access_compat.c>
   Order allow,deny
   Deny from all
  </IfModule>
</Files>
